                            "lat": 49.25,
                            "lng": -67.0
                        },
                        "sw": {
                            "lat": 25.0,
                            "lng": -125.5
                        }
                    }
                },
                "NUMPAR": 1000,
                "MAXPAR": 10000000,
                "VERTICAL_EMISLEVELS_REDUCTION_FACTOR": 5,
                "VERTICAL_LEVELS": [100],
                "INITD": 0,
                "NINIT": 0,
                "DELT": -15,
                "KHMAX": 24,
                "MPI": true,
                "MPIEXEC": "mpiexec.hydra",
                "NCPUS": 2

            }
        },
        "visualization": {
            "target": "dispersion",
            "hysplit": {
                "images_dir": "images/",
                "data_dir": "data/"
            }
        },
        "export": {
            "modes": ["email", "localsave"],
            "extra_exports": ["dispersion", "visualization"],
            "email": {
                "recipients": ["jdubowy+blueskytest@gmail.com"],
                "sender": "bsp@airfire.org",
                "subject": "BSP output",
                "smtp_server": "127.0.0.1",
                "smtp_port": 1025
            },
            "localsave": {
                "dest_dir": "/bluesky/output/bsp-local-exports/"
            }
        }
    }
